<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CalculateSample"
              xmlns:dataForm="clr-namespace:Syncfusion.XForms.DataForm;assembly=Syncfusion.SfDataForm.XForms"
             x:Class="CalculateSample.MainPage">

    <Grid x:Name="grid_layout">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="0.3*" />
        </Grid.RowDefinitions>
        
        <dataForm:SfDataForm Grid.Row="0" x:Name="dataForm"/>
        <Grid Grid.Row="1" >
            <Label x:Name="displayButton" Grid.Row="0" Text="Computed Value" HorizontalOptions="Center" TextColor="Blue"/>
            <Button x:Name="button" Grid.Row="1" Text="Scheduled Payement" TextColor="Blue" Clicked="Button_Clicked"/>
        </Grid>
    </Grid>
</ContentPage>
